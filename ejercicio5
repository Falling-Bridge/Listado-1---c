#include <stdio.h>

int main() {
    int tama単o; printf("Ingrese las dimensiones:\n"); scanf("%d", &tama単o);
    for (int i = 0; i < tama単o; i++) {
        char caracter;
        if (i % 2 == 0) {
            caracter = '+';
        } else {
            caracter = '#';
        }
        for (int j = 0; j < tama単o; j++) {
            if (j >= i) {
                printf("%c", caracter);
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
